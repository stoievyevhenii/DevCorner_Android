<?xml version="1.0" encoding="utf-8"?>


<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:centerColor="#36ACB1"
                android:endColor="@color/colorPrimarySecond"
                android:startColor="@color/colorAccent"
                android:type="linear" />
            <corners
                android:bottomLeftRadius="1000dp"
                android:bottomRightRadius="1000dp"
                android:topLeftRadius="1000dp"
                android:topRightRadius="1000dp" />
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp" />
        </shape>

    </item>
    <item
        android:left="15dp"
        android:right="15dp">
        <shape android:shape="line">
            <stroke
                android:width="2dp"
                android:color="#ffffff" />
        </shape>
    </item>
    <item
        android:left="15dp"
        android:right="15dp">
        <rotate
            android:fromDegrees="90">
            <shape android:shape="line">
                <stroke
                    android:width="2dp"
                    android:color="#ffffff" />
            </shape>
        </rotate>
    </item>
</layer-list>